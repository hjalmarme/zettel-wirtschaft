@page "/menu"

<PageTitle>Menu</PageTitle>

<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="Menu" TextStyle="TextStyle.H3" TagName="TagName.H1" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenButton Text="Add Menu Item" Click=@AddMenuItem></RadzenButton>
        <RadzenButton Text="Edit Menu Item" Click=@EditMenuItem></RadzenButton>
        <RadzenButton Text="Remove Menu Item" Click=@RemoveMenuItem></RadzenButton>
    </RadzenColumn>
</RadzenRow>

<RadzenDataGrid 
    class="mt-2"
    @ref="@dataGrid"
    @bind-Value=@selectedItems
    TItem="ZettelWirtschaft.Models.MenuItem"     
    Data="@menuItems" 
    AllowSorting="true" 
    AllowFiltering="true"
    SelectionMode="DataGridSelectionMode.Single"
    LoadData="@MenuItemsLoadData" 
    Count="@menuItemsCount">
    <Columns>
        <RadzenDataGridColumn TItem="ZettelWirtschaft.Models.MenuItem" Property="Id" Title="Id" />
        <RadzenDataGridColumn TItem="ZettelWirtschaft.Models.MenuItem" Property="Type" Title="Type" />
        <RadzenDataGridColumn TItem="ZettelWirtschaft.Models.MenuItem" Property="Name" Title="Name" />
        <RadzenDataGridColumn TItem="ZettelWirtschaft.Models.MenuItem" Property="Description" Title="Description" />
        <RadzenDataGridColumn TItem="ZettelWirtschaft.Models.MenuItem" Property="Price" Title="Price" />
    </Columns>
</RadzenDataGrid>
