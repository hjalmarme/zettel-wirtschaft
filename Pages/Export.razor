@page "/export"

<PageTitle>Export</PageTitle>

<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="Export" TextStyle="TextStyle.H3" TagName="TagName.H1" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenButton Text="Export xlsx" Click=@ExportXlsx></RadzenButton>
    </RadzenColumn>
    <RadzenColumn Size="12">
        <RadzenDatePicker @bind-Value=@date DateFormat="yyyy-MM-dd" Change="FilterOrders" />
    </RadzenColumn>
</RadzenRow>

<RadzenDataGrid @ref="dataGrid" Data="@orderItems" TItem="OrderItem" AllowPaging="true" AllowSorting="true" class="rz-mt-4">
    <Columns>
        <RadzenDataGridColumn TItem="OrderItem" Property="Id" Title="ID" />
        <RadzenDataGridColumn TItem="OrderItem" Property="Date" Title="Date" />
        <RadzenDataGridColumn TItem="OrderItem" Property="Name" Title="Name" />
        <RadzenDataGridColumn TItem="OrderItem" Property="Price" Title="Price" />
    </Columns>
</RadzenDataGrid>
